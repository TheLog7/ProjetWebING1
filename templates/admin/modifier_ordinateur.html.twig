{% extends 'base.html.twig' %}
{% block body_class %}home-page{% endblock %}

{% block title %}Modifier un Ordinateur{% endblock %}

{% block body %}
                <header class="site-header">
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Modifier un Ordinateur</h1>

    <div class="bg-white p-6 rounded-2xl shadow-md">
        {{ form_start(form) }}

        <div class="mb-4">
            {{ form_label(form.nom, 'Nom') }}
            {{ form_widget(form.nom, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.marque, 'Marque') }}
            {{ form_widget(form.marque, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.numeroSerie, 'Numéro de Série') }}
            {{ form_widget(form.numeroSerie, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.status, 'Statut') }}
            {{ form_widget(form.status, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.localisation, 'Localisation') }}
            {{ form_widget(form.localisation, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.dateAchat, 'Date d\'Achat') }}
            {{ form_widget(form.dateAchat, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.derniereMaintenance, 'Dernière Maintenance') }}
            {{ form_widget(form.derniereMaintenance, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.estEnService, 'En Service') }}
            {{ form_widget(form.estEnService, {'attr': {'class': 'w-6 h-6 border rounded'}}) }}
        </div>

        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg">Modifier</button>
        <a href="{{ path('admin_objets') }}" class="ml-4 text-gray-500">Annuler</a>

        {{ form_end(form) }}
    </div>
</div>
</header>
{% endblock %}
