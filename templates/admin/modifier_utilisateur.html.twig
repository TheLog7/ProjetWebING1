{% extends 'base.html.twig' %}
{% block body_class %}home-page{% endblock %}

{% block title %}Modifier Utilisateur{% endblock %}

{% block body %}
                <header class="site-header">
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Modifier l'utilisateur</h1>

    <div class="bg-white p-6 rounded-lg shadow-md space-y-4">
        {{ form_start(form, { 'attr': {'enctype': 'multipart/form-data'} }) }}

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
        </div>

        {{ form_row(form.email) }}

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {{ form_row(form.motDePasse, { 'attr': {'placeholder': 'Laisser vide pour ne pas modifier'} }) }}
            {{ form_row(form.type) }}
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {{ form_row(form.sexe) }}
            {{ form_row(form.niveau) }}
            {{ form_row(form.points) }}
        </div>

        {{ form_row(form.age) }}

        <div>
            <label class="block text-gray-700 font-medium mb-2">Photo actuelle</label>
            {% if utilisateur.photo %}
                <img src="{{ asset(utilisateur.photo) }}" alt="Photo de {{ utilisateur.nom }}" class="w-24 h-24 rounded-full object-cover mb-4">
            {% else %}
                <p class="text-gray-500">Aucune photo disponible</p>
            {% endif %}
        </div>

        {{ form_row(form.photo) }}
        {{ form_row(form.valide) }}

        <div class="mt-4">
            {{ form_widget(form.submit, { 'attr': {'class': 'bg-blue-500 text-white px-4 py-2 rounded-lg'} }) }}
        </div>

        {{ form_end(form) }}
    </div>

    <a href="{{ path('admin_utilisateurs') }}" class="mt-4 inline-block text-blue-500 hover:underline">← Retour à la liste</a>
</div>
</header>
{% endblock %}
