{% extends 'base.html.twig' %}

{% block title %}Supprimer un Ordinateur{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Supprimer un Ordinateur</h1>

    <div class="bg-white p-6 rounded-2xl shadow-md">
        <p class="text-lg text-gray-700 mb-4">
            Êtes-vous sûr de vouloir supprimer l'ordinateur <strong>{{ ordinateur.nom }}</strong> ({{ ordinateur.marque }} - {{ ordinateur.numeroSerie }}) ?
        </p>

        <form method="post" action="{{ path('admin_ordinateur_supprimer', {id: ordinateur.id}) }}">
            <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-lg">
                Supprimer définitivement
            </button>
            <a href="{{ path('admin_objets') }}" class="ml-4 text-blue-500">Annuler</a>
        </form>
    </div>
</div>
{% endblock %}
