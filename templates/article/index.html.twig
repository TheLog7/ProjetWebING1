                <a href="{{ path('app_article_ajout') }}" class="btn btn-success">‚ûï Ajouter un article</a>
            {% endif %}
        </div>

        <!-- Formulaire de filtrage -->
        <form method="get" action="{{ path('app_article') }}" class="mb-3">
            <div class="row g-2">
                <!-- Filtre par cat√©gorie -->
                <div class="col-md-6">
                    <label for="category" class="form-label">Filtrer par cat√©gorie :</label>
                    <select name="category" id="category" class="form-control">
                        <option value="">Toutes les cat√©gories</option>
                        <option value="Actualit√©s" {% if app.request.get('category') == 'Actualit√©s' %}selected{% endif %}>Actualit√©s</option>
                        <option value="√âv√©nements" {% if app.request.get('category') == '√âv√©nements' %}selected{% endif %}>√âv√©nements</option>
                        <option value="Conseils √âducatifs" {% if app.request.get('category') == 'Conseils √âducatifs' %}selected{% endif %}>Conseils √âducatifs</option>
                        <option value="Vie Scolaire" {% if app.request.get('category') == 'Vie Scolaire' %}selected{% endif %}>Vie Scolaire</option>
                    </select>
                </div>

                <!-- Filtre par date -->
                <div class="col-md-4">
                    <label for="date_filter" class="form-label">Trier par date :</label>
                    <select name="date_filter" id="date_filter" class="form-control">
                        <option value="">Aucun tri</option>
                        <option value="desc" {% if app.request.get('date_filter') == 'desc' %}selected{% endif %}>üìÖ Plus r√©cent</option>
                        <option value="asc" {% if app.request.get('date_filter') == 'asc' %}selected{% endif %}>üìÖ Moins r√©cent</option>
                    </select>
                </div>

                <!-- Bouton de filtrage -->
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Filtrer</button>
                </div>
            </div>
        </form>

        <!-- Affichage des articles -->
        {% if articles is empty %}
            <p class="alert alert-warning text-center">Aucun article enregistr√© pour le moment.</p>
        {% else %}
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm border-0">
                            {% if article.image %}
                                <img src="{{ article.image }}" alt="Image de l'article" class="card-img-top">
                            {% endif %}
                            <div class="card-body text-center">
                                <h5 class="card-title text-primary">{{ article.title }}</h5>
                                <p class="text-muted">{{ article.createAt|date('d/m/Y') }}</p>
                                <p class="badge bg-secondary">{{ article.category }}</p>
                                <p class="card-text">{{ article.content|slice(0, 100) }}...</p>
                                <a href="{{ path('app_article_details', {'id': article.id}) }}" class="btn btn-info">‚ÑπÔ∏è Lire plus</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
