{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Votre profil : </h1>
    <p>Nom : {{ user.nom }}</p>
    <p>Prénom : {{ user.prenom }}</p>
    <p>Age : {{ user.age }}</p>
    <p>Sexe : {{ user.sexe }}</p>
    
    <p>Email : {{ user.email }}
        <a href="{{ path('app_edit_email') }}" class="edit-icon">
            <i class="fa-solid fa-pencil"></i> <!-- Icône crayon -->
        </a>
    </p>

    <p>Vous êtes {{ user.type }}</p>
    <p>Niveau : {{ user.niveau }}</p>
    <p>Points : {{ user.points }}</p>
</div>
{% endblock %}
